# 03_modeling.ipynb
import pandas as pd
from sklearn.model_selection import train_test_split
from sklearn.linear_model import LinearRegression
from sklearn.metrics import mean_squared_error

# Load processed data
data = pd.read_csv('../data/processed/AAPL_processed.csv', parse_dates=['Date'])
data.set_index('Date', inplace=True)

# Features and target
X = data[['MA_5', 'MA_10', 'Daily_Return']]
y = data['Close']

# Train-test split
X_train, X_test, y_train, y_test = train_test_split(X, y, test_size=0.2, shuffle=False)

# Linear Regression model
model = LinearRegression()
model.fit(X_train, y_train)

# Predictions
y_pred = model.predict(X_test)

# Evaluate
mse = mean_squared_error(y_test, y_pred)
print(f'Mean Squared Error: {mse:.2f}')

# Save predictions
predictions = pd.DataFrame({'Actual': y_test, 'Predicted': y_pred})
predictions.to_csv('../data/processed/AAPL_predictions.csv')
print("Predictions saved to '../data/processed/AAPL_predictions.csv'")
