# 04_evaluation.ipynb
import pandas as pd
import matplotlib.pyplot as plt

# Load predictions
predictions = pd.read_csv('../data/processed/AAPL_predictions.csv', parse_dates=['Date'])
predictions.set_index('Date', inplace=True)

# Plot actual vs predicted
plt.figure(figsize=(12,6))
plt.plot(predictions['Actual'], label='Actual')
plt.plot(predictions['Predicted'], label='Predicted', alpha=0.7)
plt.title('Actual vs Predicted Close Price')
plt.xlabel('Date')
plt.ylabel('Price')
plt.legend()
plt.show()

# Calculate error metrics
from sklearn.metrics import mean_squared_error, mean_absolute_error

mse = mean_squared_error(predictions['Actual'], predictions['Predicted'])
mae = mean_absolute_error(predictions['Actual'], predictions['Predicted'])
print(f"Mean Squared Error: {mse:.2f}")
print(f"Mean Absolute Error: {mae:.2f}")
